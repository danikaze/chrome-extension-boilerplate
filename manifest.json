{
  "manifest_version": 3,

  "name": "Chrome Extension Boilerplate",
  "short_name": "Boilerplate",
  "description": "Boilerplate to create Chrome extensions using TypeScript + ReactJS",
  "version": "AUTO_FILLED_FROM_package.json",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },

  "action": {
    "default_title": "",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "permissions": ["webNavigation", "scripting", "storage"],
  "host_permissions": ["https://your-host.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://your-host.com/*"]
    }
  ]
}
