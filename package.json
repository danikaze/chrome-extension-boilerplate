{
  "private": true,
  "name": "chrome-extension-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate to create Chrome extensions using TypeScript + ReactJS",
  "scripts": {
    "dev": "webpack --config webpack.config.js --env=development",
    "build": "scripts/build.sh",
    "test": "npm run lint",
    "lint": "tslint -p tsconfig.json -c tslint.yaml",
    "prettier": "prettier --write '**/*.{ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier",
      "pre-push": "npm run test"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danikaze/chrome-extension-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "chrome",
    "extension",
    "plugin",
    "react",
    "typescript"
  ],
  "author": "danikaze <danikaze@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danikaze/chrome-extension-boilerplate/issues"
  },
  "homepage": "https://github.com/danikaze/chrome-extension-boilerplate#readme",
  "devDependencies": {
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.1.0",
    "git-revision-webpack-plugin": "^3.0.6",
    "husky": "^4.3.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "ts-loader": "^8.0.3",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "tslint": "^6.1.3",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-lines-between-class-members": "^1.3.6",
    "tslint-loader": "^3.5.4",
    "tslint-microsoft-contrib": "^6.2.0",
    "tslint-react": "^5.0.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/styles": "^4.10.0",
    "clsx": "^1.1.1"
  }
}
